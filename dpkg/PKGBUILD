pkgname=dpkg
pkgver=1.16.6
pkgrel=1
pkgdesc="The Debian Package Manager.  Don't use it instead of Arch's 'pacman'."
arch=('i686' 'x86_64')
url="http://packages.debian.org/${pkgname}"
license=('GPL')
depends=('bzip2' 'perl-timedate')
makedepends=('gcc' 'make' 'patch')
optdepends=('fakeroot')
replaces=(dpkg-ubuntu)
conflicts=(dpkg-ubuntu)
source=(http://ftp.debian.org/debian/pool/main/d/${pkgname}/${pkgname}_${pkgver}.tar.xz
	dpkg-arch.patch dpkg-gzip-rsyncable.patch)

build() {
	cd ${pkgname}-${pkgver}

	# Config
	sed -i 's|<ncursesw/curses.h>|<curses.h>|g' dselect/{dselect.h,Makefile.in}
	sed -i 's|<ncursesw/term.h>|<term.h>|g' dselect/main.cc

	patch -p0 -i "${startdir}/dpkg-arch.patch"
	patch -p0 -i "${startdir}/dpkg-gzip-rsyncable.patch"

	# Build
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-start-stop-daemon
	make
	make DESTDIR=${pkgdir} install

	# Variables
	install -d ${pkgdir}/var/${pkgname}/updates/
	touch ${pkgdir}/var/lib/${pkgname}/{status,available}
}
md5sums=('3a167325cbcda521b2b8c55fd297c912'
         'ca36320b74c906678925b56db9a8deca'
         '5ab63758999e9bb10f84bce79a0307b2')
