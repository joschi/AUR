# Maintainer: Jochen Schalanda <jochen+aur AT schalanda.aname>
pkgname=travis-lint
pkgver=1.8.0
pkgrel=1
pkgdesc='travis-lint is a tool that check your .travis.yml for possible issues, deprecations and so on.'
arch=(any)
url='https://github.com/travis-ci/travis-lint'
license=("MIT")
depends=('ruby' 'ruby-hashr' 'ruby-safe_yaml-0')
source=(https://rubygems.org/downloads/$pkgname-$pkgver.gem)
noextract=($pkgname-$pkgver.gem)
sha256sums=('c4d9fa334d8f727114b8adc782daeddea6a62d70bd33654d269701a0e07abbdb')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -n "${pkgdir}/usr/bin" \
    -i "${pkgdir}${_gemdir}" ${pkgname}-${pkgver}.gem
}
