post_install() {
  xdg-icon-resource install /usr/share/icons/hicolor/16x16/apps/amaze.png
  xdg-icon-resource install /usr/share/icons/hicolor/32x32/apps/amaze.png
  xdg-icon-resource install /usr/share/icons/hicolor/64x64/apps/amaze.png

  update-mime-database usr/share/mime
  update-desktop-database -q
}
