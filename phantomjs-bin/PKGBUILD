# Maintainer: Jochen Schalanda <jochen+aur@schalanda.name>
_pkgname=phantomjs
pkgname=phantomjs-bin
pkgver=1.7.0
pkgrel=1
pkgdesc="Headless WebKit with JavaScript API (official static binary)"
url="http://www.phantomjs.org/"
license=("BSD")
arch=('i686' 'x86_64')
conflicts=('phantomjs')
provides=('phantomjs')
options=('!strip')
source=(
	"http://phantomjs.googlecode.com/files/${_pkgname}-${pkgver}-linux-x86_64.tar.bz2"
	"http://phantomjs.googlecode.com/files/${_pkgname}-${pkgver}-linux-i686.tar.bz2"
	)
md5sums=('70defec09b2fd190e90912f2898d19c6'
         'c4e3cd258f6977b75dee5560e4059167')

package() {
  mkdir -p "${pkgdir}/usr/bin/"
  install -D -m755 "${srcdir}/${_pkgname}-${pkgver}-linux-${CARCH}/bin/phantomjs" "${pkgdir}/usr/bin/"
}

