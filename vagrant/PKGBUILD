pkgname=vagrant
pkgver=1.3.1
pkgrel=1
pkgdesc="Tool for building and distributing virtualized development environments"
arch=('i686' 'x86_64')
url="http://vagrantup.com/"
license=('MIT')
options=(!strip)
depends=
_git_revision='b12c7e8814171c1295ef82416ffe51e8a168a244'
source=(http://files.vagrantup.com/packages/${_git_revision}/${pkgname}_${pkgver}_${CARCH}.rpm)
[[ "$CARCH" == "x86_64" ]] && md5sums=('9b5f28e0040f5a216b44cade4cb995b4')
[[ "$CARCH" == "i686" ]] && md5sums=('ac75f0459456033d37ade1825405226a')

package() {
  mv $srcdir/{opt,usr} $pkgdir
}
