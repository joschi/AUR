# Maintainer: Francois Garillot <francois[@]garillot.net>
_gemname=gh
pkgname=ruby-$_gemname
pkgver=0.8.0
pkgrel=2
pkgdesc="layered github client"
arch=('any')
url="http://gh.rkh.im/"
license=('MIT')
depends=('ruby' 'ruby-faraday>=0.8' 'ruby-backports>=2.3' 'ruby-multi_json>=1.0' 'ruby-addressable>=0' 'ruby-net-http-persistent>=2.7' 'ruby-net-http-pipeline>=0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('3db694da67ed95b8631747c42ade8de8')
sha1sums=('795f3b98946b9a45b36bf23524d3775c260577be')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
