# Maintainer: Francois Garillot <francois[@]garillot.net>
# Contributor: Jochen Schalanda <jochen+aur@schalanda.name>
_gemname=gh
pkgname=ruby-$_gemname
pkgver=0.9.1
pkgrel=1
pkgdesc='Layered GitHub API client'
arch=('any')
url='https://github.com/rkh/gh'
license=('MIT')
depends=('ruby' 'ruby-faraday>=0.8' 'ruby-backports>=2.3' 'ruby-multi_json>=1.0' 'ruby-addressable' 'ruby-net-http-persistent>=2.7' 'ruby-net-http-pipeline')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('d34c5a3a71b1fa5c37eea310dfb23f54')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
    -n "$pkgdir/usr/bin" "$_gemname-$pkgver.gem"
}
