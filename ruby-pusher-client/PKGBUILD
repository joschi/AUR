# Maintainer: Jochen Schalanda <jochen+aur@schalanda.name>
_gemname=pusher-client
pkgname=ruby-$_gemname
pkgver=0.3.1
pkgrel=1
pkgdesc='Ruby client for consuming WebSockets from http://pusher.com'
arch=('any')
url='https://github.com/pusher/pusher-ruby-client'
license=('MIT')
depends=('ruby' 'ruby-hmac>=0.4.0' 'ruby-websocket-1.0>=1.0.0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('8102e918b6864adab5f507755c4380f1')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
