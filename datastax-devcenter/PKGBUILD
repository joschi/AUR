# Maintainer: Jochen Schalanda <jochen+aur@schalanda.name>
pkgname=datastax-devcenter
pkgver=1.1.0
pkgrel=1
pkgdesc='Visual query tool for Apache Cassandra and DataStax Enterprise clusters'
arch=('i686' 'x86_64')
url='http://www.datastax.com/what-we-offer/products-services/devcenter'
license=('Commercial')
depends=('java-environment')

case $CARCH in
'x86_64')
  _arch='x86_64'
  devcenter_md5sum='9c3928b3a07aab4092b09d61575d913c'
  ;;
'i686')
  _arch='x86'
  devcenter_md5sum='3225c235dad0df4944726c396dc0f166'
  ;;
*)
  die 'Unsupported hardware architecture'
esac
source=("http://downloads.datastax.com/devcenter/DevCenter-${pkgver}-linux-${_arch}.tar.gz"
        'datastax-devcenter.desktop'
        'datastax-devcenter.sh')
md5sums=($devcenter_md5sum
         'ca3b1b430a252e8845e4931ce25c9292'
         'bc30172c452d7542dc2122e2d4ca7420')

package() {
  cd "${srcdir}"

  mkdir -p ${pkgdir}/usr/share/
  cp -a devcenter ${pkgdir}/usr/share/datastax-devcenter

  install -D -m755 "${srcdir}/${pkgname}.sh" "${pkgdir}/usr/bin/${pkgname}"
  install -D -m644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
}

# vim:set ts=2 sw=2 et:
