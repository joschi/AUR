# Maintainer: Jochen Schalanda <jochen+aur@schalanda.name>
pkgname=ruby-lint
pkgver=0.0.3
pkgrel=2
pkgdesc='A linter and static code analysis tool for Ruby.'
arch=(any)
url='https://github.com/yorickpeterse/ruby-lint/'
license=('MIT')
depends=('ruby' 'ruby-slop' 'ruby-ast')
makedepends=('rubygems')
noextract=($pkgname-$pkgver.gem)
source=(https://rubygems.org/downloads/$pkgname-$pkgver.gem)

package() {
  cd "$srcdir"
  # _gemdir is defined inside package() because if ruby[gems] is not installed on
  # the system, makepkg will exit with an error when sourcing the PKGBUILD.
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" \
    -n "$pkgdir/usr/bin" "$pkgname-$pkgver.gem"
}
md5sums=('c65ed3139ddca9dd529317020320baa2')
